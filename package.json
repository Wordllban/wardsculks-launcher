{
  "name": "wardsculks-launcher",
  "version": "1.0.1",
  "description": "Launcher for WardSculks project. Ukrainian Minecraft servers.",
  "keywords": [
    "electron",
    "react",
    "typescript",
    "tailwindCSS",
    "webpack",
    "minecraft",
    "launcher"
  ],
  "homepage": "https://github.com/Wordllban/wardsculks-launcher",
  "bugs": {
    "url": "https://github.com/Wordllban/wardsculks-launcher/issues"
  },
  "repository": "https://github.com/Wordllban/wardsculks-launcher",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "license": "MIT",
  "main": "./src/main/main.ts",
  "scripts": {
    "start": "ts-node ./.erb/scripts/check-port-in-use.js && npm run start:renderer",
    "start:main": "cross-env NODE_ENV=development electronmon -r ts-node/register/transpile-only .",
    "start:renderer": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack serve --config ./.erb/configs/webpack.config.renderer.dev.ts",
    "start:preload": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.preload.dev.ts",
    "postinstall": "ts-node .erb/scripts/check-native-dep.js && electron-builder install-app-deps && cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.dev.dll.ts",
    "build": "concurrently \"npm run build:main\" \"npm run build:renderer\" \"npm run build:scripts\"",
    "build:main": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.main.prod.ts",
    "build:renderer": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.prod.ts",
    "build:scripts": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.scripts.prod.ts",
    "package": "ts-node ./.erb/scripts/clean.js dist && npm run build && electron-builder build --publish never",
    "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir release/app",
    "pretty": "prettier --ignore-path .gitignore \"(src|__tests__)/**/*.+(js|jsx|html|tsx|ts)\" --write",
    "lint": "cross-env NODE_ENV=development eslint . --ext .js,.jsx,.ts,.tsx --fix && npm run pretty",
    "test": "jest"
  },
  "browserslist": [],
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ]
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "release/app/node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/.erb/mocks/fileMock.js",
      "\\.(css|less|sass|scss)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "./.erb/scripts/check-build-exists.ts"
    ],
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    },
    "testPathIgnorePatterns": [
      "release/app/dist",
      ".erb/dll"
    ],
    "transform": {
      "\\.(ts|tsx|js|jsx)$": "ts-jest"
    }
  },
  "dependencies": {
    "@reduxjs/toolkit": "1.9.5",
    "appdata-path": "1.0.0",
    "axios": "1.3.4",
    "dotenv": "16.0.3",
    "electron-debug": "3.2.0",
    "electron-log": "4.4.8",
    "electron-store": "8.1.0",
    "electron-updater": "5.3.0",
    "glob": "10.3.10",
    "i18next": "22.4.10",
    "node-machine-id": "1.1.12",
    "p-limit": "4.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "12.1.5",
    "react-redux": "8.1.1",
    "react-router-dom": "6.8.1",
    "reselect": "5.0.1"
  },
  "devDependencies": {
    "@electron/notarize": "1.2.3",
    "@electron/rebuild": "3.2.10",
    "@pmmmwh/react-refresh-webpack-plugin": "0.5.10",
    "@svgr/webpack": "6.5.1",
    "@teamsupercell/typings-for-css-modules-loader": "2.5.2",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@types/discord-rpc": "4.0.7",
    "@types/jest": "29.4.0",
    "@types/lodash": "4.14.202",
    "@types/node": "18.13.0",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "@types/react-test-renderer": "18.0.0",
    "@types/terser-webpack-plugin": "5.0.4",
    "@types/uuid": "9.0.2",
    "@types/webpack-bundle-analyzer": "4.6.0",
    "@typescript-eslint/eslint-plugin": "5.51.0",
    "@typescript-eslint/parser": "5.51.0",
    "autoprefixer": "10.4.13",
    "browserslist-config-erb": "0.0.3",
    "chalk": "4.1.2",
    "clsx": "1.2.1",
    "concurrently": "7.6.0",
    "core-js": "3.27.2",
    "cross-env": "7.0.3",
    "css-loader": "6.7.3",
    "css-minimizer-webpack-plugin": "4.2.2",
    "detect-port": "1.5.1",
    "electron": "23.0.0",
    "electron-builder": "23.6.0",
    "electron-devtools-installer": "3.2.0",
    "electronmon": "2.0.2",
    "eslint": "8.33.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-erb": "4.0.6",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-import-resolver-webpack": "0.13.2",
    "eslint-plugin-compat": "4.1.1",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "29.4.2",
    "jest-environment-jsdom": "29.4.2",
    "mini-css-extract-plugin": "2.7.2",
    "postcss": "8.4.21",
    "postcss-loader": "7.0.2",
    "prettier": "2.8.4",
    "prettier-plugin-tailwindcss": "0.2.3",
    "react-refresh": "0.14.0",
    "react-test-renderer": "18.2.0",
    "rimraf": "4.2.0",
    "sass": "1.58.0",
    "sass-loader": "13.2.0",
    "style-loader": "3.3.1",
    "tailwindcss": "3.2.7",
    "terser-webpack-plugin": "5.3.6",
    "ts-jest": "29.0.5",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "tsconfig-paths-webpack-plugin": "4.0.0",
    "typescript": "4.9.5",
    "url-loader": "4.1.1",
    "webpack": "5.75.0",
    "webpack-bundle-analyzer": "4.7.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1",
    "webpack-merge": "5.8.0"
  },
  "resolutions": {
    "wrap-ansi": "7.0.0",
    "string-width": "4.2.3"
  },
  "build": {
    "productName": "WardSculks",
    "appId": "org.wardsculks.com",
    "asar": true,
    "asarUnpack": [
      "**\\*.{node,dll}",
      "dist\\scripts\\**.js",
      "node_modules"
    ],
    "files": [
      "dist",
      "node_modules",
      "package.json"
    ],
    "afterSign": ".erb/scripts/notarize.js",
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "app": "release/app",
      "buildResources": "assets",
      "output": "release/build"
    },
    "extraResources": [
      "./assets/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "Ward-Sculks",
      "repo": "wardsculks-launcher"
    }
  },
  "devEngines": {
    "node": ">=14.x",
    "npm": ">=7.x"
  },
  "electronmon": {
    "patterns": [
      "!**/**",
      "src/main/**"
    ],
    "logLevel": "quiet"
  },
  "packageManager": "yarn@1.22.1"
}
